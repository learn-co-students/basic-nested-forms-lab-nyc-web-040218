<h1>Create a New Recipe</h1>

<%= form_for @recipe do |f| %>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br><br>

    <%= f.fields_for :ingredients do |ing| %>
        <h4>Ingredient 1:</h4>
        <%= ing.label :name %> <%= ing.text_field :name %><br><br>
        <%= ing.label :quantity %> <%= ing.text_field :quantity %><br><br>
    <% end %>

    <%= f.fields_for :ingredients do |ing| %>
        <h4>Ingredient 2:</h4>
        <%= ing.label :name %> <%= ing.text_field :name %><br><br>
        <%= ing.label :quantity %> <%= ing.text_field :quantity %><br><br>
    <% end %>

    <%= f.submit %>

<% end %>